---
import { Icon } from "astro-icon/components";
const { title, icon, ...rest } = Astro.props;
---

<div
    class="flex flex-col justify-start min-h-[66vh] outline outline-1 rounded-box p-8"
    {...rest}
>
    <div class="font-extrabold md:text-2xl mb-6">
        <div class="flex">
            <Icon name={icon} class="w-8 h-8 mr-4" />
            {title}
        </div>
    </div>
    <slot />
</div>
